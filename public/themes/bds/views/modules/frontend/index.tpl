						<div class="row gy-4">

							<div class="col-md-6">
								<input type="text" name="name" id="input_name" class="form-control"
									placeholder="{lang('FrontendBd.input_contact_name')}">
								<div id="error_name" class="invalid-feedback"></div>
							</div>

							<div class="col-md-6 ">
								<input type="email" class="form-control" name="email" id="input_email"
									placeholder="{lang('FrontendBd.input_contact_email')}">
								<div id="error_email" class="invalid-feedback"></div>
							</div>

							<div class="col-md-12">
								<input type="number" class="form-control" name="phone" id="input_phone"
									placeholder="{lang('FrontendBd.input_contact_phone')}">
								<div id="error_phone" class="invalid-feedback"></div>
							</div>

							<div class="col-md-12">
								<textarea class="form-control" name="message" id="input_message" rows="6"
									placeholder="{lang('FrontendBd.input_contact_content')}"></textarea>
								<div id="error_message" class="invalid-feedback"></div>
							</div>

							<div class="col-md-12 text-center">
								<button type="submit">Đăng Ký</button>
							</div>

						</div>
						{form_close()}
					</div><!-- End Contact Form -->

